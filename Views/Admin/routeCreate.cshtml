@model FlightTicketReservation.Models.RouteDetail

@{
    ViewData["Title"] = "routeCreate";
}

<h1>Add a New Route</h1>

<h4>RouteDetail</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="routeCreate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Routeid" class="control-label"></label>
                <input asp-for="Routeid" class="form-control" />
                <span asp-validation-for="Routeid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Flightid" class="control-label"></label>
                <input asp-for="Flightid" class="form-control" />
                <span asp-validation-for="Flightid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Routedesc" class="control-label"></label>
                <input asp-for="Routedesc" class="form-control" />
                <span asp-validation-for="Routedesc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="getallRoutes">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
